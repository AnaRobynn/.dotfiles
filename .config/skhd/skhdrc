# launching and closing applications
alt - d : open /Applications/dmenu-mac.app
shift + alt - q: yabai -m window --close

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# move window
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

alt - 1      : ~/.config/skhd/open-or-create-space.sh one
alt - 2      : ~/.config/skhd/open-or-create-space.sh two
alt - 3      : ~/.config/skhd/open-or-create-space.sh three
alt - 4      : ~/.config/skhd/open-or-create-space.sh four
alt - 5      : ~/.config/skhd/open-or-create-space.sh five
alt - 6      : ~/.config/skhd/open-or-create-space.sh six
alt - 7      : ~/.config/skhd/open-or-create-space.sh seven
alt - 8      : ~/.config/skhd/open-or-create-space.sh eight
ctrl + alt - 1      : ~/.config/skhd/send-windows-to-space.sh one
ctrl + alt - 2      : ~/.config/skhd/send-windows-to-space.sh two
ctrl + alt - 3      : ~/.config/skhd/send-windows-to-space.sh three
ctrl + alt - 4      : ~/.config/skhd/send-windows-to-space.sh four
ctrl + alt - 5      : ~/.config/skhd/send-windows-to-space.sh five
ctrl + alt - 6      : ~/.config/skhd/send-windows-to-space.sh six
ctrl + alt - 7      : ~/.config/skhd/send-windows-to-space.sh seven
ctrl + alt - 8      : ~/.config/skhd/send-windows-to-space.sh eight
shift + alt - 1      : ~/.config/skhd/send-window-and-follow.sh one
shift + alt - 2      : ~/.config/skhd/send-window-and-follow.sh two
shift + alt - 3      : ~/.config/skhd/send-window-and-follow.sh three
shift + alt - 4      : ~/.config/skhd/send-window-and-follow.sh four
shift + alt - 5      : ~/.config/skhd/send-window-and-follow.sh five
shift + alt - 6      : ~/.config/skhd/send-window-and-follow.sh six
shift + alt - 7      : ~/.config/skhd/send-window-and-follow.sh seven
shift + alt - 8      : ~/.config/skhd/send-window-and-follow.sh eight

# applications
alt - return : open -na /Applications/Alacritty.app

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

:: default : yabai -m config window_border off
:: resize @ : yabai -m config window_border on
alt - r ; resize
resize < escape ; default
resize < return ; default
resize < h : yabai -m window --resize left:100:0  ; yabai -m window --resize right:-100:0
resize < l : yabai -m window --resize left:-100:0 ; yabai -m window --resize right:100:0
resize < j : yabai -m window --resize top:0:-100  ; yabai -m window --resize bottom:0:100
resize < k : yabai -m window --resize top:0:100   ; yabai -m window --resize bottom:0:-100

# toggle window split type
# alt - e : yabai -m window --toggle split
