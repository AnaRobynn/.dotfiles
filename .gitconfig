[user]
	name = Kevin De Baerdemaeker
	useconfigonly = true

[core]
	editor = vim
	excludesfile = ./.gitignore_global

[alias]
	co = checkout
	l = log -5 --graph
	s = status -s
	ss = show --summary

[color "status"]
	added = yellow bold
	changed = green bold
	untracked = red bold

[gpg]
	program = gpg2

[diff "gpg"]
	textconv = gpg2 -q --no-tty --decrypt

[push]
	default = simple

[pull]
	rebase = true

[credential]
	helper = cache --timeout=3600
